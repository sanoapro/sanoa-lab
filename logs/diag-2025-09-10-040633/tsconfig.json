{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": ".",
    "useUnknownInCatchVariables": false
  },
  "include": [
    "app",
    "components",
    "lib",
    "next-env.d.ts",
    "scripts",
    "types",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "logs/**", "logs"]
}
