{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "./",
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "preserveConstEnums": true,
    "useDefineForClassFields": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictBuiltinIteratorReturn": true,
    "alwaysStrict": true
  },
  "files": [
    "./app/error.tsx",
    "./app/head.tsx",
    "./app/layout.tsx",
    "./app/manifest.ts",
    "./app/not-found.tsx",
    "./app/page.tsx",
    "./app/providers.tsx",
    "./app/robots.ts",
    "./app/sitemap.ts",
    "./app/(app)/layout.tsx",
    "./app/(app)/dashboard/page.tsx",
    "./app/(app)/pacientes/page.tsx",
    "./app/(app)/pacientes/[id]/page.tsx",
    "./app/(app)/perfil/page.tsx",
    "./app/(app)/test-ui/page.tsx",
    "./app/(app)/test-ui/upload/page.tsx",
    "./app/(auth)/login/page.tsx",
    "./app/(auth)/register/page.tsx",
    "./app/(auth)/reset-password/page.tsx",
    "./app/(auth)/update-password/page.tsx",
    "./app/acerca/page.tsx",
    "./app/api/sentry-debug/route.ts",
    "./app/instalar/page.tsx",
    "./app/offline/page.tsx",
    "./app/privacidad/page.tsx",
    "./app/terminos/page.tsx",
    "./components/AppShell.tsx",
    "./components/AuthGate.tsx",
    "./components/ColorEmoji.tsx",
    "./components/Emoji.tsx",
    "./components/EmojiTheme.tsx",
    "./components/ExportPDFButton.tsx",
    "./components/InstallPrompt.tsx",
    "./components/Modal.tsx",
    "./components/Navbar.tsx",
    "./components/OfflineIndicator.tsx",
    "./components/OrgSwitcherBadge.tsx",
    "./components/PendingQueueBadge.tsx",
    "./components/QueueEvents.tsx",
    "./components/RegisterSW.tsx",
    "./components/RequireAuth.tsx",
    "./components/SiteFooter.tsx",
    "./components/ThemeToggle.tsx",
    "./components/Toast.tsx",
    "./components/Toaster.tsx",
    "./components/UiCard.tsx",
    "./components/UploadHint.tsx",
    "./components/ui/button.tsx",
    "./components/ui/card.tsx",
    "./components/ui/input.tsx",
    "./components/ui/label.tsx",
    "./lib/audit.ts",
    "./lib/database.types.ts",
    "./lib/org.ts",
    "./lib/patient-files.ts",
    "./lib/patient-notes.ts",
    "./lib/patient-shares.ts",
    "./lib/patients-search.ts",
    "./lib/patients.ts",
    "./lib/storage.ts",
    "./lib/supabase-browser.ts",
    "./lib/types.ts",
    "./lib/utils.ts",
    "./lib/supabase/client.ts",
    "./next-env.d.ts",
    "./scripts/generate-icons.mjs"
  ],
  "include": [
    "app",
    "components",
    "lib",
    "next-env.d.ts",
    "scripts",
    "types",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "logs/**", "logs"]
}
